page {
    background-color: #f7f7f7;
}

.swiper{
  width: 100%;
  height: 640rpx;
}

.slide-image{
  width: 100%;
  height: 640rpx;
}

.product-picture {
    display: block;
    width: 100%;
    height: 640rpx;
    background-color: #ddd;
}

.info {
    padding: 32rpx 30rpx;
    background-color: #fff;
    margin-bottom: 16rpx;
}

.info .name {
    font-size: 32rpx;
    color: #111111;
}

.info .price {
    margin-top: 24rpx;
    font-size: 42rpx;
    font-weight: 600;
    color: #ff4242;
}

.info .extra {
    display: flex;
    justify-content: space-between;
    margin-top: 8rpx;
    font-size: 28rpx;
    color: #8b8f93;
}

.detail .title {
    height: 95rpx;
    padding: 0 30rpx;
    line-height: 95rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #111111;
    background-color: #fff;
}

.photo image{
    width: 100%;
}