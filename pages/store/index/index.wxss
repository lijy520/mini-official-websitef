page {
  padding-bottom: 130rpx;
  background-color: white;
}

.header {
  position: relative;
  height: 240rpx;
}

.header .bg {
  width: 100%;
  height: 100%;
  background-color: #ddd;
}

.header .logo {
  position: absolute;
  top: 60rpx;
  left: 27rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.header .info {
  position: absolute;
  top: 73rpx;
  left: 171rpx;
}

.header .info .name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.header .info .address {
  margin-top: 13rpx;
  font-size: 24rpx;
  color: #fff;
}

.header  .phone {
  position: absolute;
  right: 50rpx;
  top: 120rpx;
  width: 40rpx;
  height: 40rpx;
}

.header  .phone image {
  width: 40rpx;
  height: 40rpx;
}




.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 130rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border-top: 1rpx solid #ccc;
}

.actions .icon {
  width: 32rpx;
  height: 32rpx;
}

.actions .name {
  display: inline-block;
  margin-left: 16rpx;
}

.actions .btn-share, .actions .btn-edit {
  display: inline-block;
  width: 130rpx;
  height: 90rpx;
  padding-left: 0;
  padding-right: 0;
  background-color: transparent;
}

.actions .btn-share::after, .actions .btn-edit::after {
  border: none;
}

.actions .btn-manage {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 332rpx;
  height: 90rpx;
  background-color: #4487f8;
  font-size: 38rpx;
  color: #fff;
}

.actions .btn-manage::after {
  border-color: #4487f8;
}




