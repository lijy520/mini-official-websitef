/* 21  商品组图文左右混排 */
.product-21 .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
  line-height: 95rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.product-21 .title .icon-list {
  width: 36rpx;
  height: 36rpx;
}

.product-21 .list {
  padding: 0 30rpx;
  overflow: hidden;
}

.product-21 .list .item {
  display: flex;
  padding: 10rpx 0 30rpx;
  flex-direction: row;
}

.product-21 .list .item .pic {
  display: block;
  width: 214rpx;
  height: 214rpx;
  background-color: #ddd;
  margin-bottom: 15rpx;
}

.product-21 .list .item .info-view{
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  height: 214rpx;
  position: relative;
}


.product-21 .list .item .info-view .name {
  width: 333rpx;
  font-size: 27rpx;
  color: #111;
  margin-bottom: 8rpx;
}

.product-21 .list .item .info-view .price {
  position: absolute;
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4242;
  bottom: 10rpx;
  left: 0rpx;
}



