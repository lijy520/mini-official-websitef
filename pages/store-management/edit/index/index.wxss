.header {
    position: relative;
    height: 240rpx;
}

.header .bg {
    width: 100%;
    height: 100%;
    background-color: #ddd;
}

.header .logo {
    position: absolute;
    top: 60rpx;
    left: 27rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background-color: #ccc;
}

.header .info {
    position: absolute;
    top: 73rpx;
    left: 171rpx;
}

.header .info .name {
    font-size: 36rpx;
    font-weight: 600;
    color: #ffffff;
}

.header .info .address {
    margin-top: 13rpx;
    font-size: 24rpx;
    color: #ffffff;
}

.btn-insert {
    height: 95rpx;
    background-color: #fff;
    font-size: 30rpx;
    text-align: center;
    color: #4487f8;
}