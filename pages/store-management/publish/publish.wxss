page {
    background-color: #f7f7f7;
}

.header {
    position: relative;
    width: 630rpx;
    height: 479rpx;
    background-image: linear-gradient(321deg, #c09e5e, #ffe5a4 22%, #f7dc9b 50%, #ae8848);
    margin: 60rpx auto 16rpx;
}

.header .title {
    padding-top: 64rpx;
    font-size: 58rpx;
    font-weight: bold;
    letter-spacing: 4rpx;
    color: #926915;
    text-align: center;
}

.header .price {
    margin-top: 40rpx;
    text-align: center;
}

.header .price view:nth-child(1) {
    display: inline;
    font-size: 88rpx;
    font-weight: bold;
    font-stretch: condensed;
    color: #222222;
}

.header .price view:nth-child(2) {
    display: inline;
    font-size: 42rpx;
    color: #111111;
    margin-left: 5rpx;
}

.header .btn-buy {
    margin-top: 37rpx;
    width: 440rpx;
    height: 76rpx;
    border-radius: 6rpx;
    background-color: #ffffff;
    font-size: 32rpx;
    color: #111111;
}

.detail {
    padding: 0 108rpx;
}

.detail .item {
    height: 68rpx;
    line-height: 68rpx;
    display: flex;
    justify-content: space-between;
}

.detail .item view:nth-child(1) {
    font-size: 28rpx;
    color: #707070;
}

.detail .item view:nth-child(2) {
    font-size: 28rpx;
    text-align: right;
    color: #cccccc;
}