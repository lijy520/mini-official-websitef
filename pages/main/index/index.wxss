.header {
    position: relative;
    height: 480rpx;
    padding: 40rpx;
    background-color: #fff;
}

.header .bg {
    width: 670rpx;
    height: 400rpx;
}

.header .title {
    position: absolute;
    top: 105rpx;
    left: 104rpx;
    font-size: 54rpx;
    font-weight: 600;
    color: #ffffff;
}

.header .subtitle {
    position: absolute;
    top: 204rpx;
    left: 104rpx;
    font-size: 24rpx;
    color: #ffffff;
}

.header .btn-edit {
    position: absolute;
    top: 308rpx;
    left: 104rpx;
    width: 240rpx;
    height: 68rpx;
    border-radius: 6rpx;
    background-color: #ffffff;
    line-height: 68rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #3386ff;
    text-align: center;
}

.mp {
    padding: 24rpx 40rpx 56rpx;
    background: #fff;
}

.mp .title {
    font-size: 36rpx;
    font-weight: 600;
    color: #222222;
    margin-bottom: 24rpx;
}

.mp .list {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.mp .list .item {
    position: relative;
    width: 212rpx;
    height: 266rpx;
    border-radius: 8rpx;
    background-color: #ffffff;
    box-shadow: 0 5rpx 30rpx 0 #e2e4e6;
    padding: 16rpx 24rpx;
    box-sizing: border-box;
}

.mp .list .item .cat {
    opacity: 0.7;
    font-size: 18rpx;
    color: #8f94aa;
    margin-bottom: 16rpx;
}

.mp .list .item .name {
    font-size: 36rpx;
    font-weight: 600;
    color: #7a86a0;
}

.mp .list .item .icon {
    position: absolute;
    bottom: 32rpx;
    left: 24rpx;
    width: 32rpx;
    height: 32rpx;
}

.made {
    position: relative;
    height: 182rpx;
    margin-top: 16rpx;
}

.made .bg {
    width: 100%;
    height: 100%;
}

.made .title {
    position: absolute;
    top: 47rpx;
    left: 176rpx;
    font-size: 36rpx;
    font-weight: 600;
    color: #4a99ff;
}

.made .subtitle {
    position: absolute;
    top: 103rpx;
    left: 176rpx;
    font-size: 24rpx;
    color: #717d96;
}

.made .btn-make {
    position: absolute;
    right: 42rpx;
    top: 50%;
    transform: translate(0, -50%);
    width: 160rpx;
    height: 64rpx;
    border-radius: 2rpx;
    background-image: linear-gradient(345deg, #ff8645, #ff5d4e);
    font-size: 32rpx;
    font-weight: 600;
    line-height: 64rpx;
    color: #ffffff;
    text-align: center;
}