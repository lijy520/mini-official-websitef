.banner {
    display: block;
    width: 100%;
    height: 461rpx;
    background-color: #ddd;
}

.website {
    height: 40rpx;
    background-color: #3562da;
    line-height: 40rpx;
    font-size: 22rpx;
    text-align: center;
    color: #ffffff;
}

.intro {
    background-color: #fff;
    padding: 46rpx 0;
}

.intro .item {
    position: relative;
    margin-bottom: 24rpx;
}

.intro .item .icon {
    position: absolute;
    top: 9rpx;
    left: 50rpx;
    width: 32rpx;
    height: 32rpx;
    background-color: #ddd;
}

.intro .item .content {
    display: inline-block;
    width: 564rpx;
    margin-left: 98rpx;
    opacity: 0.6;
    font-size: 32rpx;
    font-weight: 600;
    color: #222222;
}

.form {
    padding: 2rpx 50rpx;
    background-color: #fff;
}

.form .title {
    font-size: 40rpx;
    font-weight: 600;
    color: #222222;
    margin-bottom: 32rpx;
}

.form input {
    width: 650rpx;
    height: 88rpx;
    border-radius: 4rpx;
    background-color: #fcf8fb;
    margin-bottom: 24rpx;
}

.form .btn-submit {
    width: 650rpx;
    height: 88rpx;
    border-radius: 4rpx;
    background-color: #4487f8;
    font-size: 36rpx;
    color: #ffffff;
}