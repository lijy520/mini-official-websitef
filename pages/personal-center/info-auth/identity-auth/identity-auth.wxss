.placeholder {
    font-size: 32rpx;
    color: #cccccc;
}

page{
  background-color: white;
}

.field {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 95rpx;
    padding: 0 30rpx;
}

.field .label {
    font-size: 28rpx;
    color: #777777;
}

.field input {
    flex-grow: 0.5;
    height: 45rpx;
    min-height: 45rpx;
}

.upload {
    display: flex;
    justify-content: space-between;
    padding: 0 40rpx;
}

.upload .uploader {
    width: 320rpx;
    height: 240rpx;
    border: dashed 1rpx #ccc;
}

.upload .uploader .icon-plus {
    margin: 70rpx auto 34rpx;
    position: relative;
}

.upload .uploader .title {
    font-size: 26rpx;
    text-align: center;
    color: #cccccc;
}

.btn-submit {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #4487f8;
    font-size: 36rpx;
    color: #ffffff;
    border-radius: 0;
}

.line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1rpx;
}


.list .item .line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}

.line view {
    height: 2rpx;
    background-color: rgba(204, 204, 204, 0.5);
    margin: 0 30rpx;
}